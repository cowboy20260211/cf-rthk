{
  "name": "rthk-radio-cf",
  "version": "1.0.1",
  "type": "module",
  "description": "香港电台CF版 - 在线收听与节目点播平台",
  "scripts": {
    "dev": "vite",
    "proxy": "node proxy-server.cjs",
    "dev:full": "concurrently \"npm run proxy\" \"npm run dev\"",
    "build": "tsc && vite build && cp -r functions dist/",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "pages:dev": "vite preview",
    "pages:deploy": "npm run build && wrangler pages deploy dist",
    "workers:dev": "wrangler dev",
    "workers:deploy": "wrangler deploy",
    "workers:build": "esbuild workers/src/index.ts --bundle --outfile=dist/workers.js --format=esm --loader:.wasm=file"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.2.0",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.10",
    "hls.js": "^1.6.15",
    "howler": "^2.2.4",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/cheerio": "^0.22.35",
    "@types/howler": "^2.2.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "esbuild": "^0.19.10",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright": "^1.58.2",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.1.0",
    "wrangler": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
